@model IEnumerable<SockMarket.Models.Company>

@{
    ViewBag.Title = "Home Page";
}


<div class="container">

    <div class="row">

        <h2>Company list</h2>
        
        <p>
            @Html.ActionLink("Create New", "Create", "Company", null, null)
        </p>

        <div class="row">
            <table class="table">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Company", new { id = item.ID }, null) |
                            @Html.ActionLink("Details", "Details", "Company", new { id = item.ID }, null) |
                            @Html.ActionLink("Delete", "Delete", "Company", new { id = item.ID }, null)
                        </td>
                    </tr>
                }
            </table>
        </div>

    </div>

</div>